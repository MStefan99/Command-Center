@require '../../src/style/stylify.styl'
@require '../../src/style/colors.styl'


html
	scroll-behavior smooth
	font-family Arial, sans-serif

	body
		display flex
		flex-flow column nowrap
		justify-content space-between
		margin 0
		overflow hidden
		color #4970FF
		font-size 2.5vh
		line-height @font-size * 2

		#cover-container
			position relative

			.cover
				display block
				width auto
				margin 0 auto
				max-height 70vh
				max-width 100%
				margin-bottom -7vh
				transition transform .2s ease-in,
				opacity .2s ease-in

		#text-container
			transition opacity .1s ease-in

			#title
				text-align center
				font-size 5vh
				font-weight 900

			#message
				display inline-block
				text-align center
				white-space pre-wrap

		#nav-container
			display flex
			flex-flow row nowrap
			justify-content space-between

			.button
				border-radius @font-size * 2
				border solid 3px @color
				padding 0 2ch
				font-weight bold
				cursor pointer

				&#button-next
					background-color @color
					color white
